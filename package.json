{
  "name": "@otiai10/too",
  "version": "1.0.0",
  "description": "Combine multiple processes' Stdout/Stderr/SIGINT to keep them all foreground",
  "scripts": {
    "build": "tsc",
    "validate": "npm run lint && npm run build && npm link && too -c 'echo foo' -c 'echo bar'",
    "lint": "tslint ./src/**/*.ts",
    "test": "jest"
  },
  "bin": {
    "too": "dist/bin/too.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com/otiai10/too.js"
  },
  "author": "otiai10",
  "license": "MIT",
  "keywords": [
    "Command",
    "Parallel",
    "SIGINT",
    "ctrl+c"
  ],
  "dependencies": {
    "lookpath": "0.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
