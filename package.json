{
  "name": "too",
  "version": "2.2.0",
  "description": "Combine multiple processes' Stdout/Stderr/SIGINT to keep them all foreground",
  "scripts": {
    "build": "tsc",
    "validate": "npm run lint && npm run build && npm link && too -c 'echo foo' -c 'echo bar'",
    "lint": "eslint ./src/**/*.ts ./tests/**/*.ts",
    "test": "jest"
  },
  "bin": {
    "too": "dist/bin/too.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/otiai10/too.js.git"
  },
  "author": "otiai10",
  "license": "MIT",
  "keywords": [
    "Command",
    "Parallel",
    "SIGINT",
    "ctrl+c"
  ],
  "dependencies": {
    "lookpath": "^1.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^8.47.0",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "typescript": "^4.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/lib/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
