{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "firefunctions"
  ]
}
